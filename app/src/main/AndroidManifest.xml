<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.iitblive.iitblive">

  <uses-permission android:name="android.permission.INTERNET"/>
  <uses-permission android:name="android.permission.WRITE_CALENDAR"/>
  <uses-permission android:name="android.permission.CALL_PHONE"/>

  <application
      android:allowBackup="true"
      android:icon="@drawable/user_icon"
      android:label="@string/app_name"
      android:theme="@style/AppTheme">
    <activity
        android:name=".MainActivity"
        android:label="@string/app_name">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>

        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>
    <activity
        android:name="com.iitblive.iitblive.activity.LoginActivity"
        android:label="@string/app_name"
        android:windowSoftInputMode="adjustResize">
      <intent-filter>
        <action android:name="android.intent.action.LOGIN"/>
        <category android:name="android.intent.category.DEFAULT"/>
      </intent-filter>
    </activity>
    <activity
        android:name="com.iitblive.iitblive.activity.GenericInformationListActivity"
        android:theme="@style/BackTheme"
        android:label="@string/app_name">
      <intent-filter>
        <action android:name="android.intent.action.GENERIC"/>
        <category android:name="android.intent.category.DEFAULT"/>
      </intent-filter>
    </activity>
    <activity
        android:name="com.iitblive.iitblive.activity.IitbTimetableActivity"
        android:label="@string/app_name"
        android:theme="@style/BackTheme">
      <intent-filter>
        <action android:name="android.intent.action.GENERIC"/>
        <category android:name="android.intent.category.DEFAULT"/>
      </intent-filter>
    </activity>
  </application>

</manifest>
